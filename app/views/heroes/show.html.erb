<tr>
  <td><%= @hero.name %></td>
  <td><%= @hero.fullName %></td>
  <td><%= @hero.gender %></td>
  <td><%= @hero.height %></td>
  <td><%= @hero.weight %></td>
  <td><%= @hero.eye_color %></td>
  <td><%= @hero.hair_color %></td>
  <td><%= @hero.place_of_birth %></td>
  <td><%= @hero.alignment %></td>
  <td><%= @hero.publisher.name unless @hero.publisher.blank? %></td>
  <td><%= @hero.race.race unless @hero.race.blank? %></td>
  <td><%= @hero.powers.map(&:name).join(', ') %></td>
</tr>

  <%= render partial: 'heroes/hero', object: @hero %>
