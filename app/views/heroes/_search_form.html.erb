<%# local: true indicates we want a page reload, not an AJAX search %>
<%= form_with(url: search_path, local: true, method: "get", class: 'search-form') do %>
  <div class="field has-addons">
    <div class="control">
      <%= text_field_tag(:search_term, nil, class: "input", placeholder: "Search Heroes by Name") %>
    </div>
    <div class="control">
      <%= submit_tag("Search", class: "button is-dark") %>
    </div>
  </div>
<% end %>